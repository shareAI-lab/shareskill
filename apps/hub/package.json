{
  "name": "shareskill",
  "version": "0.1.0",
  "description": "ShareSkill Hub - MCP Server for Agent Skills discovery and management",
  "type": "module",
  "bin": {
    "shareskill": "./bin/shareskill.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "panel"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "shareskill",
    "mcp",
    "agent",
    "skills",
    "claude",
    "cursor",
    "codex"
  ],
  "author": "ShareAI Lab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shareai-lab/shareskill"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@shareskill/shared": "workspace:*",
    "commander": "^12.0.0",
    "express": "^4.18.0",
    "node-fetch": "^3.3.0",
    "ora": "^8.0.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
